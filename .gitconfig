[push]
    default = tracking

[core]
    editor = vim
    excludesfile = ~/.gitignore
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[merge]
    tool = vimdiff
    stat = true

[branch]
    autosetuprebase = always

[color]
    ui = auto
    status = auto
    branch = auto
    interactive = auto
    diff = auto

[diff]
    renames = copies
    mnemonicprefix = true

[rerere]
    enabled = true
    autoupdate = true

[alias]
    st = status
    tst = status # I keep typoing this :/ see also bash which has an alias for `gi`
    ci = commit
    co = checkout
    br = branch

    dfc = diff --cached
    dfw = diff --word-diff

    log = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all

    # remove files that have been marked as deleted
    rmd = "!git ls-files --deleted -z | xargs -0 git rm"

    # Usage: git whatsnew <other_branch>
    # Show commits that are in the current branch,
    # but not in <other_branch>. Great for an
    # instant changelog.
    whatsnew = !sh -c 'git shortlog --format=\"%h %s\" $1..HEAD' -

    # Delete all local branches that are already merged into the current branch
    cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d"

[init]
	templatedir = ~/.git_templates
[credential]
	helper = osxkeychain
[github]
	user = dlimeb
